<div class="small-12 columns">
  <h3>Leaderboard</h3>
  <div class="small-3 columns">
    <h4>Categories</h4>
    {{>nav }}
  </div>
  <div class="small-9 columns">
    {{#unless expired }}
      <p>The leaderboard will appear here once the deadline for making predictions has been reached.</p>
    {{ else }}
      {{#if table.error }}
      <p>Error in retrieving results :-(</p>
      {{else}}
      <table id="results">
        <thead>
          <tr>
            <th>Position</th>
            <th>Player</th>
            <th colspan="2">Score</th>
          </tr>
        </thead>
        <tbody>
          {{#each table.data }}
          <tr>
            <td class="{{#if @first }}winner{{/if }}">{{#if @first }}<span class="lead">&#127942;</span>{{ else }}{{ rank }}{{/if}}</td>
            <td class="{{#if @first }}winner{{/if }}">{{ player }}</td>
            <td width="500px">
              <div class="bar" data-len="{{ score }}"></div>
            </td>
            <td>{{ score }}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
      {{/if }}
    {{/unless }}    
  </div>

</div>
